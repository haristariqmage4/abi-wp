<div class="links {{menu_class}}">
    <ul>
        {% for item in menu_to_show.items %}
            <li class="nav-main-item {{(item.current)?'current':''}}{{ item.classes|join(' ') }}">
                <a class="nav-main-link" href="{{ item.link }}">{{ item.title }}</a>
                {% if item.children %}
                    <ul class="nav-drop">
                        {% for child in item.children %}
                            <li class="nav-drop-item">
                                <a href="{{ child.link }}">{{ child.title }}</a>
                                {% if child.children %}
                                    <ul class="nav-drop">
                                         {% for child in child.children %}
                                            <li class="nav-drop-item">
                                                <a href="{{ child.link }}">{{ child.title }}</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                                
                               
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</div>